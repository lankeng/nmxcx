.author {
  padding: 30rpx 0 0;
}

.author-main {
  margin: 0 20rpx;
  display: flex;
  justify-content: space-between;
}

.author-box {
  margin: 0 30rpx 0 10rpx;
  width: 124rpx;
  height: 124rpx;
  position: relative;
}

.author-box-img {
  width: 124rpx;
  height: 124rpx;
}

.author-box-cation {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 5rpx;
  bottom: 7rpx;
}

.author-brief {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.author-title {
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.author-introduce {
  font-size: 24rpx;
  color: #666;
}

.author-list {
  margin-top: 50rpx;
  padding-bottom: 50rpx;
  display: flex;
  flex-direction: row;
}

.claim {
  display: inline-block;
  width: 33.33%;
}

.claim .claim-btn {
  margin: 0 auto;
  display: block;
  width: 130rpx;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #e1574c;
  border: 2rpx solid #e1574c;
  border-radius: 10rpx;
  background: #fff;
}

.mechanism, .mouth {
  display: flex;
  flex-direction: column;
  text-align: center;
}

.mechanism text:first-child, .mouth text:first-child {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

.mechanism text:last-child, .mouth text:last-child {
  font-size: 20rpx;
  color: #666;
}

.line-height {
  height: 20rpx;
  background: #f5f5f5;
}

.navbar {
  flex: none;
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #ddd;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 110rpx;
  font-size: 28rpx;
}

.navbar .item.active {
  color: #00c587;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 24%;
  right: 0;
  height: 4rpx;
  width: 50%;
  background: #00c587;
}

.navbar .item:last-child {
  line-height: 82rpx;
}

.navbar .item:last-child:before {
  content: '(依据百度影响力)';
  font-size: 22rpx;
  color: #999;
  position: absolute;
  top: 33rpx;
  left: 40rpx;
}

.product {
  width: 100%;
}

.product-dataImg {
  width: 100%;
  display: block;
}

.ranking-list {
  display: flex;
  justify-content: space-between;
  margin: 0 24rpx;
  border-bottom: 1rpx solid #ddd;
}

.ranking-list:last-child {
  border-bottom: 0;
}

.ranking-list-title{
  display: flex;
  flex-direction: row;
  padding: 30rpx 0;
  position: relative;
  left: 30rpx
}
.ranking-list-number{
  display: flex;
  flex-direction: row;
  padding: 30rpx 0;
  position: relative;
  left:-20rpx;
}
.ranking-list-title image {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 0;
}

.ranking-list-title text {
  margin-left: 45rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

.ranking-list-number text {
  font-size: 24rpx;
  font-weight: bold;
  color: #00c587;
}

.car-content {
  margin: 40rpx 24rpx;
}

.car-content .car-content-title {
  display: block;
  padding-left: 20rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 24rpx;
  background: #00c587;
  border-radius: 6rpx 6rpx 0 0;
  color: #fff;
}

.car-content-data {
  padding: 14rpx 15rpx 20rpx;
  box-shadow: 1rpx 1rpx 8rpx #ebebeb;
  position: relative;
  height: 254rpx;
  overflow: hidden;
}

.car-content-tiem, .car-content-source {
  display: block;
  margin-bottom: 15rpx;
  font-size: 24rpx;
  color: #999;
}

.car-content-force {
  display: block;
  margin-bottom: 15rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

.car-content-details {

  font-size: 24rpx;
  color: #333;
  text-indent: 2em;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}
.make{
  position: relative;
  left: 560rpx;
  bottom: 16rpx;
  color: #2F94FF;
  font-size: 24rpx;
}